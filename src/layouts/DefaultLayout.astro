---
const { title = "BlakIA" } = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/legacy.css" />
  </head>
  <body class="bg-black text-white font-sans">
    <header class="p-4 sticky top-0 bg-black z-50 border-b border-gray-800">
      <div class="max-w-6xl mx-auto flex justify-between items-center">
        <h1 class="text-2xl font-bold">Blak<span class="text-blue-500">IA</span></h1>
        <nav class="space-x-4">
          <a href="#" class="hover:text-blue-400">Inicio</a>
          <a href="#services" class="hover:text-blue-400">Servicios</a>
          <a href="#contact" class="hover:text-blue-400">Contacto</a>
        </nav>
      </div>
    </header>
    <main class="max-w-6xl mx-auto p-4">
      <slot />
    </main>
    <footer class="text-center text-sm py-6 text-gray-400">
      &copy; 2025 BlakIA. Todos los derechos reservados.
    </footer>
  </body>
</html>
