---
import { benefits } from "@/data/benefits"
---

<section
  id="benefits"
  class="py-24 bg-canvas text-foreground relative border-t border-border"
>
  <div class="container relative z-10 px-4">
    <div class="flex flex-col lg:flex-row items-center justify-between gap-16">
      {/* Title Section */}
      <div class="lg:w-1/3 text-center lg:text-left space-y-4">
        <h2
          class="text-3xl md:text-4xl font-bold tracking-tight text-foreground"
        >
          <span class="title-outline-purple">Beneficios Clave</span>
        </h2>
        <div class="h-1 w-20 bg-secondary rounded-full mx-auto lg:mx-0"></div>
        <p class="text-muted-foreground text-lg">
          Transforma tu operativa diaria con soluciones que generan valor real.
        </p>
      </div>

      {/* Connected Flow Steps */}
      <div class="lg:w-2/3 grid grid-cols-1 md:grid-cols-3 gap-8 relative">
        {/* Connector Line (Desktop Only) */}
        <div
          class="hidden md:block absolute top-12 left-0 w-full h-px from-transparent via-primary/20 to-transparent -z-10"
        >
        </div>

        {
          benefits.map((benefit, index) => (
            <div class="relative flex flex-col items-center text-center group">
              <div class="mb-6 relative">
                <div class="absolute inset-0 bg-primary/20 blur-xl rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
                <div class="relative w-24 h-24 rounded-2xl bg-surface border border-border flex items-center justify-center text-primary group-hover:text-secondary-foreground group-hover:bg-secondary group-hover:border-secondary transition-all duration-300 shadow-xl shadow-black/5 overflow-hidden">
                  <div class="absolute inset-0 from-white/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
                  <benefit.icon size={40} strokeWidth={1.5} />
                </div>
                {/* Step Number Badge */}
                <div class="absolute -top-3 -right-3 w-8 h-8 rounded-full bg-canvas border border-border flex items-center justify-center text-xs font-bold text-muted-foreground group-hover:text-secondary-foreground group-hover:bg-secondary group-hover:border-secondary/50 transition-colors">
                  {index + 1}
                </div>
              </div>

              <h3 class="text-xl font-bold mb-3 text-foreground group-hover:text-primary transition-colors">
                {benefit.title}
              </h3>
              <p class="text-muted-foreground text-sm leading-relaxed group-hover:text-foreground transition-colors px-2">
                {benefit.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
