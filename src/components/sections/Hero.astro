---
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
import { ArrowRight, Sparkles } from "lucide-react";
import GridPattern from "@/components/ui/GridPattern.astro";
---

<section
  id="hero"
  class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20 bg-background dark:bg-zinc-950 transition-colors duration-300"
>
  {/* Background Gradients - Matching other sections */}
  <div class="absolute inset-0 w-full h-full bg-background dark:bg-zinc-950 transition-colors duration-300">
    <div class="absolute top-0 left-0 w-full h-[500px] bg-primary/10 dark:bg-primary/20 blur-[120px] opacity-40 dark:opacity-30 mix-blend-multiply dark:mix-blend-screen"></div>
    <div class="absolute bottom-0 right-0 w-full h-[500px] bg-secondary/10 dark:bg-secondary/10 blur-[120px] opacity-30 dark:opacity-20 mix-blend-multiply dark:mix-blend-screen"></div>
    {/* Noise Texture */}
    <div class="absolute inset-0 opacity-[0.03] dark:opacity-[0.05] mix-blend-overlay" style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E&quot;);"></div>
  </div>

  {/* Grid Pattern Overlay */}
  <GridPattern className="opacity-[0.03] dark:opacity-[0.15] text-foreground dark:text-white/20" />

  <div
    class="container relative z-10 flex flex-col items-center text-center max-w-5xl px-4 pt-12"
  >
    {/* Badge with Yellow Accent - Consistent with other sections */}
    <div
      class="inline-flex items-center gap-2 rounded-full border border-secondary/30 bg-secondary/10 px-4 py-1.5 text-sm font-medium text-secondary-foreground dark:text-secondary mb-8 backdrop-blur-md shadow-[0_0_15px_rgba(238,255,6,0.1)] dark:shadow-[0_0_15px_rgba(238,255,6,0.2)] animate-in fade-in slide-in-from-bottom-4 duration-500 hover:bg-secondary/20 transition-all cursor-default group"
    >
      <Sparkles className="size-3.5 group-hover:rotate-12 transition-transform text-secondary-foreground dark:text-secondary" />
      <span class="tracking-wide">Automatización e Inteligencia Artificial</span>
    </div>

    <h1
      class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black tracking-tighter mb-8 text-foreground dark:text-white leading-[1.1] animate-in fade-in slide-in-from-bottom-6 duration-700 delay-100"
    >
      Impulsa tu negocio con <br class="hidden md:block" />
      <span class="relative inline-block text-transparent bg-clip-text bg-gradient-to-r from-primary via-purple-600 to-purple-400 dark:via-purple-400">
        Inteligencia Artificial
        {/* Subtle glow behind text */}
        <span class="absolute inset-0 blur-3xl bg-primary/20 dark:bg-primary/40 -z-10 opacity-50"></span>
      </span>
    </h1>

    <p
      class="text-lg md:text-xl text-muted-foreground dark:text-zinc-400 mb-10 max-w-2xl leading-relaxed animate-in fade-in slide-in-from-bottom-8 duration-700 delay-200"
    >
      Transformamos tareas manuales en sistemas autónomos eficientes. Recupera
      tu tiempo y escala tu empresa con tecnología de vanguardia.
    </p>

    <div
      class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto animate-in fade-in slide-in-from-bottom-10 duration-700 delay-300"
    >
      <a
        href="/contacto"
        class={cn(
          buttonVariants({ variant: "default", size: "lg" }),
          "h-14 px-8 text-lg rounded-full bg-primary hover:bg-primary/90 text-white shadow-[0_0_20px_rgba(94,23,235,0.3)] transition-all hover:scale-105 hover:shadow-[0_0_35px_rgba(94,23,235,0.5)]",
        )}
      >
        Empezar ahora
        <ArrowRight className="ml-2 size-5" />
      </a>
      
      <a
        href="#services"
        class={cn(
          buttonVariants({ variant: "outline", size: "lg" }),
          "h-14 px-8 text-lg rounded-full border-border/50 dark:border-white/10 bg-background/50 dark:bg-white/5 text-foreground dark:text-white hover:bg-muted/50 dark:hover:bg-white/10 dark:hover:border-white/20 backdrop-blur-sm transition-all"
        )}
      >
        Ver soluciones
      </a>
    </div>

    {/* Tech Stack / Social Proof Strip */}
    <div
      class="mt-20 pt-8 border-t border-border/40 dark:border-white/5 w-full max-w-3xl animate-in fade-in slide-in-from-bottom-12 duration-1000 delay-500"
    >
      <p
        class="text-xs text-muted-foreground dark:text-zinc-500 uppercase tracking-widest mb-6 font-semibold opacity-70"
      >
        Potenciando empresas con tecnología de punta
      </p>
      {/* Add logos here if available in the future */}
    </div>
  </div>
</section>