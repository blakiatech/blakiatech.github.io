---
import cordoba_ai from "@/assets/cordoba_ai.png";

const cases = [
  {
    title: "Cordob.ai - El ChatGPT de Córdoba",
    client: "Cordoba",
    url: "https://cordob.ai/",
    description:
      "IA generativa avanzada para resolver dudas ciudadanas y turísticas en tiempo real vía WhatsApp y Web.",
    metric: "+85% Eficiencia",
    image: cordoba_ai,
    tags: ["WhatsApp", "N8N", "AI Search"],
  },
];
---

<section id="case-studies" class="py-20 bg-black text-white">
  <div class="container relative">
    <div class="text-center mb-16 relative">
      <h2
        class="text-4xl font-bold tracking-tight md:text-5xl mb-12 relative inline-block after:content-[''] after:absolute after:-bottom-4 after:left-1/2 after:-translate-x-1/2 after:w-[60px] after:h-[3px] after:bg-primary"
      >
        Casos de Éxito
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto mt-8">
        Resultados reales de empresas que ya han automatizado su negocio con
        nosotros.
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        cases.map((item) => (
          <a
            href={item.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group relative block aspect-[4/5] overflow-hidden rounded-3xl bg-zinc-900 border border-white/5"
          >
            {/* Imagen de fondo */}
            <img
              src={item.image.src}
              alt={item.title}
              class="absolute inset-0 h-full w-full object-cover opacity-50 transition-transform duration-700 group-hover:scale-110 group-hover:opacity-30"
            />

            {/* Overlay de gradiente más denso abajo para lectura */}
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/60 to-transparent" />

            <div class="absolute inset-0 flex flex-col justify-end p-8">
              {/* Métrica Flotante */}
              <div class="absolute top-6 left-6 transform -translate-y-2 opacity-0 transition-all duration-300 group-hover:translate-y-0 group-hover:opacity-100">
                <span class="bg-primary/90 backdrop-blur-sm px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-widest text-white border border-white/10">
                  {item.metric}
                </span>
              </div>

              {/* Icono Link */}
              <div class="absolute top-6 right-6">
                <div class="rounded-full bg-white/5 p-2 backdrop-blur-md border border-white/10 group-hover:bg-primary group-hover:border-primary transition-all duration-300">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="white"
                    stroke-width="2.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <>
                      <path d="M15 3h6v6" />
                      <path d="M10 14 21 3" />
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                    </>
                  </svg>
                </div>
              </div>

              {/* Bloque de Texto */}
              <div class="space-y-4">
                <div class="space-y-2">
                  <span class="text-primary font-bold text-[10px] uppercase tracking-[0.4em]">
                    {item.client}
                  </span>
                  <h3 class="text-2xl font-bold leading-tight text-white md:text-3xl tracking-tight">
                    {item.title}
                  </h3>
                </div>

                {/* DESCRIPCIÓN: Aparece con un ligero movimiento hacia arriba en hover */}
                <p class="text-sm text-zinc-400 leading-relaxed line-clamp-3 transform transition-all duration-500 group-hover:text-zinc-200">
                  {item.description}
                </p>

                {/* Tags */}
                <div class="flex flex-wrap gap-2 pt-2">
                  {item.tags.map((tag) => (
                    <span class="text-[9px] font-bold uppercase tracking-wider text-zinc-500 border border-white/5 bg-white/5 px-2 py-1 rounded">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </a>
        ))
      }
    </div>

    <div class="mt-20 flex flex-col items-center">
      <div class="flex -space-x-3 mb-4">
        {/* Avatares ficticios o logos pequeños de clientes */}
        {
          [1, 2, 3, 4].map((i) => (
            <div class="w-10 h-10 rounded-full border-2 border-black bg-zinc-800 flex items-center justify-center text-[10px] font-bold">
              UA
            </div>
          ))
        }
        <div
          class="w-10 h-10 rounded-full border-2 border-black bg-primary flex items-center justify-center text-[10px] font-bold text-white"
        >
          +15
        </div>
      </div>
      <p class="text-gray-400 font-medium">
        Empresas optimizando procesos con <span class="text-white">BlakIA</span> este
        mes.
      </p>
    </div>
  </div>
</section>
