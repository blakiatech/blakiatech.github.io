---
import { SocialLinks } from "./SocialLinks";
const base = import.meta.env.BASE_URL;

const QUICK_LINKS = [
  { name: "Servicios", href: "/#services" },
  { name: "Casos de éxito", href: "/#case-studies" },
  { name: "Contacto", href: "/#contact" },
];

const LEGAL_LINKS = [
  { name: "Política de Privacidad", href: "/privacy" },
  { name: "Política de Cookies", href: "/privacy" },
  { name: "Aviso Legal", href: "/privacy" },
];
---

<footer class="border-t bg-muted/30 pt-16 pb-8">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      {/* Brand Column */}
      <div class="space-y-4">
        <a
          href="/#hero"
          class="flex items-center gap-2 font-bold text-xl"
        >
          <img
            src="/logo_blakia.jpeg"
            alt="BlakIA Logo"
            class="h-10 w-auto object-contain"
          />
        </a>
        <p class="text-muted-foreground text-sm leading-relaxed">
          Transformando negocios a través de soluciones de Inteligencia
          Artificial innovadoras y personalizadas.
        </p>
        <SocialLinks />
      </div>

      {/* Navigation Column */}
      <div class="space-y-4">
        <h3 class="font-semibold text-foreground">Enlaces Rápidos</h3>
        <ul class="space-y-2 text-sm">
          {
            QUICK_LINKS.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-muted-foreground hover:text-primary transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Legal Column */}
      <div class="space-y-4">
        <h3 class="font-semibold text-foreground">Legal</h3>
        <ul class="space-y-2 text-sm">
          {
            LEGAL_LINKS.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-muted-foreground hover:text-primary transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Partners Column */}
      <div class="space-y-4">
        <h3 class="font-semibold text-foreground">Con el apoyo de</h3>
        <div class="flex flex-row gap-4">
          <div
            class="bg-background/50 p-3 rounded-lg border border-border/50 w-fit"
          >
            <img
              src={"/el-patio-completo-logo-negativo.svg"}
              alt="El Patio"
              class="h-18 w-auto opacity-90 hover:opacity-100 transition-opacity dark:invert-0"
            />
          </div>
          <div
            class="bg-background/50 p-3 rounded-lg border border-border/50 w-fit"
          >
            <img
              src={"/IMDEEC-Pegatinas-2025-Autoempleo-L1.jpg"}
              alt="IMDEEC"
              class="h-18 w-auto opacity-90 hover:opacity-100 transition-opacity rounded-sm"
            />
          </div>
        </div>
      </div>
    </div>

    {/* Bottom Bar */}
    <div
      class="border-t border-border/50 pt-8 mt-8 text-center text-sm text-muted-foreground"
    >
      <p>
        &copy; {new Date().getFullYear()} BlakIA. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
