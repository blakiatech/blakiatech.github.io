---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import ChatWidget from '../components/ChatWidget.astro';
---
<DefaultLayout title="BlakIA - Automatización e IA">
  <section class="min-h-screen flex flex-col justify-center items-center text-center px-4">
    <h2 class="text-4xl md:text-5xl font-bold mb-4">
      Automatización e Inteligencia Artificial para tu Negocio
    </h2>
    <p class="text-lg max-w-xl text-gray-300 mb-6">
      Transformamos tareas repetitivas y procesos manuales en sistemas inteligentes y eficientes 24/7.
    </p>
    <button class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded shadow">
      Descubre más
    </button>
  </section>
  <ChatWidget />
</DefaultLayout>
