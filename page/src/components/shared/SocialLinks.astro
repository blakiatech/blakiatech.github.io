---
// src/components/shared/SocialLinks.astro
import { Github, Linkedin, Instagram } from 'lucide-react';

const socialLinks = [
    { name: 'GitHub', href: 'https://github.com/blakiatech', icon: Github },
    { name: 'LinkedIn', href: 'https://www.linkedin.com/company/blakiatech', icon: Linkedin },
    { name: 'Instagram', href: 'https://www.instagram.com/blakiatech/', icon: Instagram },
];
---
<div class="flex items-center space-x-4">
    {socialLinks.map(link => (
        <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={link.name}
            class="text-muted-foreground hover:text-foreground transition-colors"
        >
            <link.icon className="h-5 w-5" />
        </a>
    ))}
</div>
