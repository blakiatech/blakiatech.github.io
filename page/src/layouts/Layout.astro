---
import '@/styles/global.css';
import Header from '@/components/shared/Header.astro';
import Footer from '@/components/shared/Footer.astro';
import { ChatWidget } from '@/components/ChatWidget';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  noindex?: boolean;
}

const {
  title = 'BlakIA - Automatización e Inteligencia Artificial para Empresas',
  description = 'BlakIA es tu agencia de automatización e inteligencia artificial. Creamos asistentes, chatbots y sistemas inteligentes para pymes y profesionales.',
  ogImage = '/og-image.jpg',
  noindex = false
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, 'https://www.blakia.es');
---

<!DOCTYPE html>
<html lang="es">
<head>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-9TJV9Q93EP"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
  
    gtag('config', 'G-9TJV9Q93EP');
  </script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="keywords" content="blakia, inteligencia artificial, automatización, IA para empresas, chatbots, asistentes virtuales, n8n, GPT, Córdoba, consultora IA">
  <meta name="author" content="BlakIA">
  <link rel="canonical" href={canonicalURL}>
  
  {noindex && <meta name="robots" content="noindex, nofollow">}
  
  <!-- Open Graph -->
  <meta property="og:title" content="BlakIA - Automatización con IA para tu negocio">
  <meta property="og:description" content="Aumenta la eficiencia y reduce tareas repetitivas con soluciones de IA adaptadas a tu empresa.">
  <meta property="og:image" content={`https://www.blakia.es${ogImage}`}>
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:type" content="website">
  <meta property="og:site_name" content="BlakIA">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={`https://www.blakia.es${ogImage}`}>
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />

  <!-- Fonts (Inter) -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="dark bg-background text-foreground bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]">
  <Header />
  <main class="pt-16">
    <slot />
  </main>
  <Footer />
  <ChatWidget client:load />
</body>
</html>
